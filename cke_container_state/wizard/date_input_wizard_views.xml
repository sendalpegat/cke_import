<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_date_input_wizard_form" model="ir.ui.view">
            <field name="name">date.input.wizard.form</field>
            <field name="model">custom.picking.date.wizard</field>
            <field name="arch" type="xml">
                <form string="Input Tanggal Status">
                    <sheet>
                        <group>
                            <field name="picking_id" invisible="1"/>
                            <field name="stage" invisible="1"/>
                            <field name="input_date" string="Pilih Tanggal" class="oe_inline"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" string="Simpan" type="object" class="btn-primary"/>
                        <button string="Batal" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_custom_date_wizard" model="ir.actions.act_window">
            <field name="name">Input Tanggal Status</field>
            <field name="res_model">custom.picking.date.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>