<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_picking_form_custom_stages" model="ir.ui.view">
            <field name="name">stock.picking.form.custom.stages</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <!-- Tambahkan status bar -->
                <xpath expr="//field[@name='state']" position="after">
                    <field name="custom_stage" widget="statusbar" 
                        statusbar_visible="loaded,boarded,customs,arrived,done" 
                        options="{'clickable': '1'}"/>
                </xpath>

                <!-- Tambahkan tombol aksi -->
                <xpath expr="//header//button[@name='button_validate']" position="before">
                    <button name="open_date_wizard('loaded')" string="Loaded" type="object" class="oe_highlight" 
                        attrs="{'invisible': [('custom_stage', '!=', 'loaded')]}"/>
                    <button name="open_date_wizard('boarded')" string="Boarded" type="object" class="oe_highlight" 
                        attrs="{'invisible': [('custom_stage', '!=', 'boarded')]}"/>
                    <button name="open_date_wizard('customs')" string="Customs" type="object" class="oe_highlight" 
                        attrs="{'invisible': [('custom_stage', '!=', 'customs')]}"/>
                    <button name="open_date_wizard('arrived')" string="Arrived" type="object" class="oe_highlight" 
                        attrs="{'invisible': [('custom_stage', '!=', 'arrived')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>