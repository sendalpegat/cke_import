<odoo>
    <record id="group_purchase_claim_user" model="res.groups">
        <field name="name">Purchase Claim User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_purchase_claim_manager" model="res.groups">
        <field name="name">Purchase Claim Manager</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="rule_purchase_claim_user" model="ir.rule">
        <field name="name">Purchase Claim User</field>
        <field name="model_id" ref="model_purchase_claim"/>
        <field name="domain_force">[('state', '!=', 'rejected')]</field>
        <field name="groups" eval="[(4, ref('purchase_claim.group_purchase_claim_user'))]"/>
    </record>

    <record id="rule_purchase_claim_manager" model="ir.rule">
        <field name="name">Purchase Claim Manager</field>
        <field name="model_id" ref="model_purchase_claim"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('purchase_claim.group_purchase_claim_manager'))]"/>
    </record>
</odoo>