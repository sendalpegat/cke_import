<odoo>
    <record id="view_purchase_claim_form" model="ir.ui.view">
        <field name="name">purchase.claim.form</field>
        <field name="model">purchase.claim</field>
        <field name="arch" type="xml">
            <form string="Purchase Claim">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="state"/>
                        <field name="purchase_order_id"/>
                        <field name="vendor_id"/>
                        <field name="claim_date"/>
                        <field name="resolution_date"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Submit" type="object" name="submit_claim" states="draft"/>
                    <button string="Approve" type="object" name="approve_claim" states="submitted"/>
                    <button string="Reject" type="object" name="reject_claim" states="submitted"/>
                    <button string="Cancel" type="object" name="action_cancel" states="approved,rejected"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_purchase_claim_tree" model="ir.ui.view">
        <field name="name">purchase.claim.tree</field>
        <field name="model">purchase.claim</field>
        <field name="arch" type="xml">
            <tree string="Purchase Claim">
                <field name="name"/>
                <field name="state"/>
                <field name="purchase_order_id"/>
                <field name="vendor_id"/>
                <field name="claim_date"/>
                <field name="resolution_date"/>
            </tree>
        </field>
    </record>

    <record id="view_purchase_claim_search" model="ir.ui.view">
        <field name="name">purchase.claim.search</field>
        <field name="model">purchase.claim</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="state"/>
                <field name="purchase_order_id"/>
                <field name="vendor_id"/>
                <field name="claim_date"/>
                <field name="resolution_date"/>
            </search>
        </field>
    </record>
</odoo>