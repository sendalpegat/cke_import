<odoo>
    <!-- Tree View -->
    <record id="view_purchase_order_history_tree" model="ir.ui.view">
        <field name="name">purchase.order.history.tree</field>
        <field name="model">purchase.order.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name="vendor_id"/>
                <field name="purchase_order_id"/>
                <field name="date_approve"/>
                <field name="quantity"/>
                <field name="price_unit"/>
            </tree>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_purchase_order_history_pivot" model="ir.ui.view">
        <field name="name">purchase.order.history.pivot</field>
        <field name="model">purchase.order.history</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="product_id" type="row"/>
                <field name="vendor_id" type="row"/>
                <field name="quantity" type="measure"/>
                <field name="price_unit" type="measure"/>
                <field name="date_approve" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Action -->
    <record id="action_purchase_order_history" model="ir.actions.act_window">
        <field name="name">Purchase Order History</field>
        <field name="res_model">purchase.order.history</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="view_id" ref="view_purchase_order_history_tree"/>
    </record>

    <!-- Menu -->
    <menuitem id="menu_purchase_order_history_root" 
              name="Purchase History" 
              parent="purchase.menu_purchase_root" 
              sequence="10"/>
    <menuitem id="menu_purchase_order_history" 
              name="Purchase Order History" 
              parent="menu_purchase_order_history_root" 
              action="action_purchase_order_history"/>
</odoo>