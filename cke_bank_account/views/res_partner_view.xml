<odoo>
    <record id="view_partner_form_bank" model="ir.ui.view">
        <field name="name">res.partner.form.bank</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='accounting']/group/group[.//field[@name='bank_ids']]" position="after">
                <group string="Additional Bank Information">
                    <field name="bank_account_number"/>
                    <field name="bank_name"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>