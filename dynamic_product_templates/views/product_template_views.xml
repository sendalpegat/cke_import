<odoo>
    <record id="view_product_template_form_dynamic" model="ir.ui.view">
        <field name="name">product.template.form.dynamic</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <page name="general" position="inside">
                <group>
                    <field name="dynamic_field_values">
                        <tree editable="bottom">
                            <field name="name" readonly="1"/>
                            <field name="value_char" attrs="{'invisible': [('field_type', '!=', 'char')]}"/>
                            <field name="value_integer" attrs="{'invisible': [('field_type', '!=', 'integer')]}"/>
                            <field name="value_boolean" attrs="{'invisible': [('field_type', '!=', 'boolean')]}"/>
                        </tree>
                    </field>
                </group>
            </page>
        </field>
    </record>
</odoo>