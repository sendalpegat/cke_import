<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_move_form_commercial" model="ir.ui.view">
            <field name="name">account.move.form.with.commercial</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Tambahkan button di header -->
                <xpath expr="//form//header" position="inside">
                    <button 
                        name="action_send_to_commercial" 
                        string="Send to Commercial" 
                        type="object" 
                        class="btn-primary" 
                        attrs="{'invisible': [('state', '!=', 'draft')]}"
                        groups="account.group_account_manager"/>
                    
                    <button 
                        name="action_commercial_approve" 
                        string="Approve by Commercial" 
                        type="object" 
                        class="btn-primary" 
                        attrs="{'invisible': [('state', '!=', 'commercial')]}"
                        groups="account.group_account_manager"/>
                </xpath>

                <!-- Tampilkan status Commercial di header -->
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" 
                        statusbar_visible="draft,commercial,posted" 
                        statusbar_colors='{"commercial":"blue"}'/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>