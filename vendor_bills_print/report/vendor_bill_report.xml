<odoo>
    <template id="vendor_bill_report_template">
        <t t-name="vendor_bills_print.vendor_bill_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Vendor Bill Report</h2>
                        <p t-esc="doc.name"/>
                        <p t-esc="doc.date"/>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.invoice_line_ids" t-as="line">
                                    <td t-esc="line.product_id.display_name"/>
                                    <td t-esc="line.quantity"/>
                                    <td t-esc="line.price_unit"/>
                                    <td t-esc="line.price_total"/>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="vendor_bill_report_action" model="ir.actions.report">
        <field name="name">Vendor Bill Report</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">vendor_bills_print.vendor_bill_report</field>
        <field name="report_file">vendor_bills_print.vendor_bill_report</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>
</odoo>