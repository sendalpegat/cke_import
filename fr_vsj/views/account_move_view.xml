<odoo>
  <record id="view_vendor_bill_form_inherit_extra_cost" model="ir.ui.view">
    <field name="name">account.move.form.inherit.extra.cost</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <!-- Tambahkan field sebelum total (total_amount) hanya untuk vendor bill -->
      <xpath expr="//field[@name='amount_tax']" position="after">
        <field name="additional_cost" attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}"/>
      </xpath>
      <xpath expr="//field[@name='amount_total']" position="attributes">
        <attribute name="options">{'no_create': True}</attribute>
      </xpath>
    </field>
  </record>
</odoo>