<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit the product.template form view -->
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Move Internal Reference above Product Name -->
            <xpath expr="//field[@name='default_code']" position="replace">
                <field name="name" string="Description"/>
            </xpath>

            <!-- Remove Product Name from its original position -->
            <xpath expr="//field[@name='name']" position="replace">
                <field name="default_code" string="Product"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit the product.product form view -->
    <record id="view_product_product_form_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <!-- Move Internal Reference above Product Name -->
            <xpath expr="//field[@name='default_code']" position="replace">
                <field name="name" string="Description"/>
            </xpath>

            <!-- Remove Product Name from its original position -->
            <xpath expr="//field[@name='name']" position="replace">
                <field name="default_code" string="Product"/>
            </xpath>
        </field>
    </record>
</odoo>