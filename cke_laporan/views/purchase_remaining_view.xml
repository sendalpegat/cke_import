<odoo>
    <!-- Tree View -->
    <record id="view_purchase_remaining_tree" model="ir.ui.view">
        <field name="name">purchase.remaining.line.tree</field>
        <field name="model">purchase.remaining.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_ref"/>
                <field name="product_id"/>
                <field name="product_name"/>
                <field name="order_id"/>
                <field name="date_approve"/>
                <field name="date_order"/>
                <field name="due_date"/>
                <field name="overdue"/>
                <field name="quantity"/>
                <field name="received"/>
                <field name="price_unit"/>
                <field name="subtotal"/>
                <field name="po_ita"/>
                <field name="hpp"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_purchase_remaining_report" model="ir.actions.act_window">
        <field name="name">Sisa PO</field>
        <field name="res_model">purchase.remaining.line</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_purchase_remaining_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Tidak ada sisa PO untuk ditampilkan</p>
        </field>
    </record>

    <!-- Menu langsung di bawah "Purchase Orders" -->
    <menuitem id="menu_purchase_remaining_report"
              name="Sisa PO"
              parent="purchase.menu_purchase_root"
              action="action_purchase_remaining_report"
              sequence="14"/>
</odoo>