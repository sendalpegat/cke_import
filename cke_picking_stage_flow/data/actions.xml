      <!-- binding agar muncul di Actions list view stock.move -->
      <field name="binding_model_id" ref="stock.model_stock_move"/>
      <field name="binding_view_types">list</field>
      <field name="context">{'default_move_ids': active_ids}</field>
    </record>

  </data>
</odoo>