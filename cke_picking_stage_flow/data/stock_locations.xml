    <record id="loc_customs" model="stock.location">
      <field name="name">Customs</field>
      <field name="usage">internal</field>
      <field name="location_id" ref="cke_picking_stage_flow.loc_logistics_transit_root"/>
    </record>

    <record id="loc_arrived" model="stock.location">
      <field name="name">Arrived</field>
      <field name="usage">internal</field>
      <field name="location_id" ref="cke_picking_stage_flow.loc_logistics_transit_root"/>
    </record>

    <record id="loc_gudang_vsj" model="stock.location">
      <field name="name">Gudang VSJ</field>
      <field name="usage">internal</field>
      <field name="location_id" ref="cke_picking_stage_flow.loc_logistics_transit_root"/>
    </record>

  </data>
</odoo>