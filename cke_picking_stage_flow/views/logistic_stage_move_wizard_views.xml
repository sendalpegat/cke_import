<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_logistic_stage_move_wizard" model="ir.ui.view">
      <field name="name">logistic.stage.move.wizard.form</field>
      <field name="model">logistic.stage.move.wizard</field>
      <field name="arch" type="xml">
        <form string="Change Logistic Stage" create="false" edit="false">
          <group>
            <field name="move_ids" widget="many2many_tags" options="{'no_create': True}"/>
            <field name="move_date"/>
            <field name="auto_validate"/>
          </group>
          <footer>
            <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
            <button string="Cancel" class="btn-secondary" special="cancel"/>
          </footer>
          <separator string="Notes"/>
          <p>Wizard ini otomatis memindahkan stok ke <i>tahap berikutnya</i>:
             <b>Loaded → Boarded → Customs → Arrived → Gudang VSJ</b>.
          </p>
        </form>
      </field>
    </record>

  </data>
</odoo>