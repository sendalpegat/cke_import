<odoo>
    <record id="view_order_form_inherit_hpp" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.hpp</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <field name="hpp"/>
                <field name="rest_po"/>
                <field name="po_ita"/>
                <field name="rest_po_total"/>
            </xpath>
        </field>
    </record>

