    <record id="view_currency_rate_form_inherit_hpp_factor" model="ir.ui.view">
        <field name="name">res.currency.rate.form.inherit.hpp.factor</field>
        <field name="model">res.currency.rate</field>
        <field name="inherit_id" ref="base.view_currency_rate_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='rate']" position="before">
                <field name="hpp_factor"/>
            </xpath>
        </field>
    </record>

    <record id="view_currency_rate_tree_inherit_hpp_factor" model="ir.ui.view">
        <field name="name">res.currency.rate.tree.inherit.hpp.factor</field>
        <field name="model">res.currency.rate</field>
        <field name="inherit_id" ref="base.view_currency_rate_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='rate']" position="before">
                <field name="hpp_factor"/>
            </xpath>
        </field>
    </record>
</odoo>

