<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Tambah tombol Create Picking & smart button Receipts di form Vendor Bill -->
    <record id="view_move_form_create_picking_after_post" model="ir.ui.view">
      <field name="name">account.move.form.create.picking.after.post</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
          <button name="action_create_picking_from_bill"
                  type="object"
                  string="Create Picking"
                  class="btn-primary"
                  attrs="{'invisible': ['|', ('state','!=','posted'), ('move_type','!=','in_invoice')]}"
          />
          <button name="action_view_pickings"
                  type="object"
                  class="oe_stat_button"
                  attrs="{'invisible': [('picking_ids','=',[])]}"
                  icon="fa-truck">
            <field name="picking_ids" widget="statinfo" string="Receipts"/>
          </button>
        </xpath>
      </field>
    </record>

  </data>
</odoo>