<odoo>
    <record id="view_product_category_form_inherit" model="ir.ui.view">
        <field name="name">product.category.form.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group string="Categories Template">
                    <field name="spec_field_ids" context="{'default_field_type': 'spec'}">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="field_type" invisible="1"/>
                        </tree>
                    </field>

                    <field name="material_field_ids" context="{'default_field_type': 'material'}">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="field_type" invisible="1"/>
                        </tree>
                    </field>

                    <field name="cable_field_ids" context="{'default_field_type': 'cable'}">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="field_type" invisible="1"/>
                        </tree>
                    </field>

                    <field name="color_field_ids" context="{'default_field_type': 'color'}">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="field_type" invisible="1"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>