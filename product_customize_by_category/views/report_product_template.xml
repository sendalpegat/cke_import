<odoo>
    <!-- Definisi Report -->
    <report
        id="report_product_template_pdf"
        model="product.template"
        string="Product Template Report"
        report_type="qweb-pdf"
        name="product_customize_by_category.report_product_template_pdf"
        file="product_customize_by_category.report_product_template_pdf"
        attachment_use="False"
    />

    <!-- Template QWeb untuk Report -->
    <template id="report_product_template_pdf" t-name="product_customize_by_category.report_product_template_pdf">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <h2>Product Template Report</h2>
                    <p><strong>Product Name:</strong> <span t-field="object.name"/></p>
                    <p><strong>Category:</strong> <span t-field="object.categ_id.name"/></p>

                    <!-- Section for Specification -->
                    <h3>Specification</h3>
                    <p t-if="object.custom_field_data_combined">
                        <span t-field="object.custom_field_data_combined"/>
                    </p>
                    <p t-else="">No Specification Data</p>

                    <!-- Section for Material -->
                    <h3>Material</h3>
                    <p t-if="object.custom_field_data2_combined">
                        <span t-field="object.custom_field_data2_combined"/>
                    </p>
                    <p t-else="">No Material Data</p>

                    <!-- Section for Cable -->
                    <h3>Cable</h3>
                    <p t-if="object.custom_field_data3_combined">
                        <span t-field="object.custom_field_data3_combined"/>
                    </p>
                    <p t-else="">No Cable Data</p>

                    <!-- Section for Color -->
                    <h3>Color</h3>
                    <p t-if="object.custom_field_data4_combined">
                        <span t-field="object.custom_field_data4_combined"/>
                    </p>
                    <p t-else="">No Color Data</p>
                </div>
            </t>
        </t>
    </template>
</odoo>