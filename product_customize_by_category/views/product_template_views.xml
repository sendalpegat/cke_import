<odoo>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Categories Template">
                    <group>
                        <button name="action_sync_variant_fields" type="object" string="Sync Variants" class="oe_highlight"/>
                        <button name="action_unlock_fields" type="object" 
                                string="Unlock All Fields" 
                                class="oe_highlight"
                                attrs="{'invisible': [('is_locked', '=', False)]}"/>
                        <field name="spec_field_values">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="value"/>
                                <field name="original_value" string="Original Value" readonly="1"/>
                                <field name="is_locked" invisible="1"/>
                            </tree>
                        </field>



                        <field name="spec_field_summary" readonly="1"/>
                        <field name="motor_type"/>
                        <field name="bearing_type"/>
                        <field name="knob_switch_speed"/>
                        <field name="cable_speed"/>
                        <field name="remote_control"/>
                        <field name="tou"/>
                        <field name="led"/>
                        <field name="manual_book"/>
                        <field name="is_locked" invisible="1"/>

                        <field name="material_field_values">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="value"/>
                                <field name="original_value" string="Original Value" readonly="1"/>
                                <field name="is_locked" invisible="1"/>
                            </tree>
                        </field>

                        <field name="material_field_summary" readonly="1"/>

                        <field name="cable_field_values">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="value"/>
                                <field name="original_value" string="Original Value" readonly="1"/>
                                <field name="is_locked" invisible="1"/>
                            </tree>
                        </field>

                        <field name="cable_field_summary" readonly="1"/>

                        <field name="color_field_values">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="value"/>
                                <field name="original_value" string="Original Value" readonly="1"/>
                                <field name="is_locked" invisible="1"/>
                            </tree>
                        </field>

                        <field name="color_field_summary" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>