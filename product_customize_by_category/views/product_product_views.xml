<odoo>
    <record id="view_product_product_form_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Categories Template">
                    <group>
                        <field name="spec_field_values">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="value"/>
                                <field name="original_value" string="Original Value" readonly="1"/>
                                <field name="is_locked" invisible="1"/>
                            </tree>
                        </field>

                        <!-- Field summary akan otomatis compute dari variant -->
                        <field name="spec_field_summary" readonly="1"/>

                        <field name="motor_type"/>
                        <field name="bearing_type"/>
                        <field name="knob_switch_speed"/>
                        <field name="cable_speed"/>
                        <field name="remote_control"/>
                        <field name="tou"/>
                        <field name="led"/>
                        <field name="manual_book"/>
                        <field name="is_locked" invisible="1"/>

                        <field name="material_field_values">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="value"/>
                                <field name="original_value" string="Original Value" readonly="1"/>
                                <field name="is_locked" invisible="1"/>
                            </tree>
                        </field>

                        <field name="material_field_summary" readonly="1"/>

                        <field name="cable_field_values">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="value"/>
                                <field name="original_value" string="Original Value" readonly="1"/>
                                <field name="is_locked" invisible="1"/>
                            </tree>
                        </field>

                        <field name="cable_field_summary" readonly="1"/>

                        <field name="color_field_values">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="value"/>
                                <field name="original_value" string="Original Value" readonly="1"/>
                                <field name="is_locked" invisible="1"/>
                            </tree>
                        </field>

                        <field name="color_field_summary" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>