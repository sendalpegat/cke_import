<odoo>
    <record id="view_partner_tree_child_custom" model="ir.ui.view">
        <field name="name">res.partner.tree.child.custom</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Supplier">
                <field name="ref" string="Vendor Code"/>
                <field name="parent_id" string="Company"/>
                <field name="display_child_name" string="Beneficiary"/>
                <field name="street"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="action_res_partner_child_only" model="ir.actions.act_window">
        <field name="name">Child Contacts</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('parent_id','!=',False)]</field>
        <field name="view_id" ref="view_partner_tree_child_custom"/>
        <field name="context">{}</field>
    </record>

    <!-- Tambahkan submenu "Vendors" -->
    <menuitem id="menu_purchase_child_vendors"
          name="Vendors"
          parent="purchase.menu_purchase_root"
          sequence="50"/>

    <!-- Pindahkan menu ke bawah Purchase > Orders > Vendors -->
    <menuitem id="menu_partner_child_root"
              name="Vendor Contact"
              parent="menu_purchase_child_vendors"
              action="action_res_partner_child_only"
              sequence="10"/>
</odoo>