<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Add Import Shortcut to Purchase Settings -->
        <record id="view_purchase_config_settings_inherit_import" model="ir.ui.view">
            <field name="name">res.config.settings.purchase.import.shortcut</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='purchase']" position="inside">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <div class="o_form_label">Quick Import Tools</div>
                                <div class="text-muted">
                                    Import product pack components from Excel/CSV files
                                </div>
                                <div class="mt8">
                                    <button name="product_bundle_pack.action_import_product_pack_wizard"
                                            string="ðŸ“¥ Import Product Pack"
                                            type="action"
                                            class="btn btn-primary"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Add Import Button to Product Template Form View -->
        <record id="view_product_template_import_button" model="ir.ui.view">
            <field name="name">product.template.import.button</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="product_bundle_pack.action_import_product_pack_wizard"
                            string="ðŸ“¥ Import Pack Components"
                            type="action"
                            class="btn-info"
                            attrs="{'invisible': [('is_pack', '=', False)]}"
                            groups="base.group_system,sales_team.group_sale_manager"/>
                </xpath>
            </field>
        </record>

        <!-- Separate view for adding control panel buttons -->
        <record id="action_product_pack_list_with_import" model="ir.actions.act_window">
            <field name="name">Product Components</field>
            <field name="res_model">product.pack</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_template': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create components for product packs.
                </p>
                <p>
                    <a name="product_bundle_pack.action_import_product_pack_wizard" 
                       type="action" 
                       class="btn btn-primary">
                        ðŸ“¥ Import Components from File
                    </a>
                </p>
            </field>
        </record>

    </data>
</odoo>