<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Simple Menu Additions - No inheritance issues -->
        
        <!-- Action untuk quick access -->
        <record id="action_import_product_pack_quick" model="ir.actions.act_window">
            <field name="name">游닌 Import Product Pack Components</field>
            <field name="res_model">import.product.pack.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- Menu di Administration (Settings area) -->
        <menuitem id="menu_import_admin"
                  name="游닌 Import Product Pack"
                  parent="base.menu_administration"
                  action="action_import_product_pack_quick"
                  sequence="15"
                  groups="base.group_system"/>

        <!-- Menu di Sales area -->
        <menuitem id="menu_import_sales"
                  name="游닌 Import Product Pack"
                  parent="sale.product_menu_catalog"
                  action="action_import_product_pack_quick"
                  sequence="25"
                  groups="sales_team.group_sale_manager"/>

        <!-- Menu di Inventory area -->
        <menuitem id="menu_import_inventory"
                  name="游닌 Import Product Pack"
                  parent="stock.menu_stock_root"
                  action="action_import_product_pack_quick"
                  sequence="25"
                  groups="stock.group_stock_manager"/>

    </data>
</odoo>