<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_explode_pack" model="ir.ui.view">
            <field name="name">account.move.form.explode.pack</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="explode_pack_button"
                            type="object"
                            string="Explode Packs"
                            class="btn-warning"
                            attrs="{'invisible': [('move_type','!=','in_invoice')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>