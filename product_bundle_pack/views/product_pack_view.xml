<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Action -->
    <record id="action_product_pack_list" model="ir.actions.act_window">
      <field name="name">Product Components</field>
      <field name="res_model">product.pack</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create components for product packs.
        </p>
      </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_product_pack_main_component"
              name="Import Components"
              parent="product_bundle_pack.menu_product_pack_main"
              action="action_product_pack_list"
              sequence="20"/>

    <!-- Tree View -->
    <record id="view_product_pack_tree" model="ir.ui.view">
      <field name="name">product.pack.tree</field>
      <field name="model">product.pack</field>
      <field name="arch" type="xml">
        <tree>
          <field name="product_id"/>
          <field name="default_code"/>
          <field name="name"/>
          <field name="standard_price"/>
          <field name="qty_uom"/>
          <field name="bi_product_template"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record id="view_product_pack_form" model="ir.ui.view">
      <field name="name">product.pack.form</field>
      <field name="model">product.pack</field>
      <field name="arch" type="xml">
        <form string="Product Pack Component">
          <sheet>
            <group>
              <field name="bi_product_template"/>
              <field name="product_id"/>
              <field name="default_code"/>
              <field name="name"/>
              <field name="standard_price"/>
              <field name="qty_uom"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>