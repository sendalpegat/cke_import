<odoo>
    <record id="view_vendor_bill_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit.vendor.bill</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date_due']" position="after">
                <field name="due_status" widget="statusbar" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>