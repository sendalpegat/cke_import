<odoo>
    <record id="view_vendor_bill_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit.vendor.bill</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="invoice_date_due" readonly="1"/>
                <field name="purchase_order_id" readonly="1"/>
                <field name="due_status" readonly="1"
                       widget="badge"
                       decoration-danger="due_status == 'overdue'"
                       decoration-success="due_status == 'not_due'"/>
                <field name="total_days" readonly="1"/>
            </xpath>

        </field>
    </record>

    <record id="view_vendor_bill_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.vendor.bill</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="invoice_date_due"/>
                <field name="purchase_order_id"/>
                <field name="due_status"
                       widget="badge"
                       decoration-danger="due_status == 'overdue'"
                       decoration-success="due_status == 'not_due'"/>
            </xpath>
        </field>
    </record>

