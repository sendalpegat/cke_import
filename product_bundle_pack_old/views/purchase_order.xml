<odoo>
    <record id="view_purchase_order_line_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.line.form.inherit</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_form"/>
        <field name="arch" type="xml">
            <!-- Add a button to recalculate the product pack -->
            <xpath expr="//form/sheet" position="inside">
                <button name="recalculate_product_pack" string="Recalculate Pack" type="object"
                    attrs="{'invisible': [('product_id.is_pack', '=', False)]}" class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>