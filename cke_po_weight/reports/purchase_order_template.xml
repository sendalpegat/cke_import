<odoo>
    <data>
        <template id="purchase_order_template_for_po_weight"
                  inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//table[hasclass('o_main_table')]/thead/tr/th[3]" position="after">
                <th class="text-right">
                    <strong>Weight</strong>
                </th>
            </xpath>
            <xpath expr="//tbody/t[2]/tr/t/td[3]" position="after">
                <td class="text-right">
                    <span t-field="line.product_weight"/>
                </td>
            </xpath>
            <xpath expr="//tr[hasclass('o_total')][1]" position="after">
                <td>
                    <strong>Total Weight</strong>
                </td>
                <td class="text-right">
                    <span t-field="o.total_weight"/>
                </td>
            </xpath>
            <xpath expr="//table[hasclass('o_main_table')]/thead/tr/th[3]" position="after">
                <th class="text-right">
                    <strong>Volume</strong>
                </th>
            </xpath>
            <xpath expr="//tbody/t[2]/tr/t/td[3]" position="after">
                <td class="text-right">
                    <span t-field="line.product_volume"/>
                </td>
            </xpath>
            <xpath expr="//tr[hasclass('o_total')][1]" position="after">
                <td>
                    <strong>Total Volume</strong>
                </td>
                <td class="text-right">
                    <span t-field="o.total_volume"/>
                </td>
            </xpath>
        </template>
    </data>
</odoo>