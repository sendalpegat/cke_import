<!-- security/record_rules.xml -->
<odoo>
    <record id="rule_custom_field_spec" model="ir.rule">
        <field name="name">Specification Fields Access</field>
        <field name="model_id" ref="model_product_category_custom_field"/>
        <field name="domain_force">[('field_type', '=', 'spec')]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <record id="rule_custom_field_material" model="ir.rule">
