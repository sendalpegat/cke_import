<odoo>
    <record id="view_purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <sheet position="after">
                <button name="action_check_vendor_bill_reminder" string="Check Vendor Bills" type="object" class="btn-primary"/>
            </sheet>
        </field>
    </record>

    <data noupdate="1">
        <record id="email_template_vendor_bill_reminder" model="mail.template">
            <field name="name">Vendor Bill Reminder</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="subject">Reminder: Vendor Bill Missing for Purchase Order ${object.name}</field>
            <field name="email_from">${(user.email or 'no-reply@arai.web.id')|safe}</field>
            <field name="email_to">${object.user_id.partner_id.email|safe}</field>
            <field name="body_html">
                <![CDATA[
                    <p>Dear ${object.user_id.name},</p>
                    <p>This is a reminder that the Purchase Order <strong>${object.name}</strong> created on <strong>${object.date_order}</strong> does not have an associated Vendor Bill.</p>
                    <p>Please take the necessary actions.</p>
                    <p>Thank you.</p>
                ]]>
            </field>
        </record>
    </data>
</odoo>