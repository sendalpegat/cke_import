<odoo>
    <data>
        <record id="view_product_category_form_spec" model="ir.ui.view">
            <field name="name">product.category.form.spec</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.view_product_category_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Default Specifications">
                        <field name="default_specifications">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="value"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>