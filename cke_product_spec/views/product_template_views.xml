<odoo>
    <data>
        <record id="view_product_template_form_spec" model="ir.ui.view">
            <field name="name">product.template.form.spec</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Specifications">
                        <field name="specification_ids">
                            <tree>
                                <field name="name"/>
                                <field name="value"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>