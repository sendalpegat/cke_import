<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tambah tombol di header PO -->
        <record id="view_purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.bundle.validation</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_confirm']" position="before">
                    <button 
                        name="action_validate_bundles" 
                        string="Validate Bundles"
                        type="object"
                        class="btn-warning"
                        attrs="{'invisible': [('state', 'in', ['done', 'cancel'])]}"
                    />
                </xpath>
            </field>
        </record>

        <!-- Tambah warning di PO line -->
        <record id="view_purchase_order_line_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.line.form.inherit.bundle.validation</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form2"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <div class="alert alert-warning" 
                         attrs="{'invisible': [('product_id.is_pack', '=', False)]}">
                        <i class="fa fa-exclamation-triangle"/> 
                        This is a bundle product. Ensure components are properly configured!
                    </div>
                </field>
            </field>
        </record>
    </data>
</odoo>