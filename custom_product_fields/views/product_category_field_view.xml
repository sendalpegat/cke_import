<odoo>
    <record id="view_product_category_field_form" model="ir.ui.view">
        <field name="name">product.category.field.form</field>
        <field name="model">product.category.field</field>
        <field name="arch" type="xml">
            <form string="Custom Field">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="field_type"/>
                        <field name="selection_options" attrs="{'invisible': [('field_type', '!=', 'selection')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_category_field_tree" model="ir.ui.view">
        <field name="name">product.category.field.tree</field>
        <field name="model">product.category.field</field>
        <field name="arch" type="xml">
            <tree string="Custom Fields">
                <field name="name"/>
                <field name="field_type"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_product_category_field" name="Custom Fields" parent="product.menu_catalog" sequence="20"/>
    <record id="action_product_category_field" model="ir.actions.act_window">
        <field name="name">Custom Fields</field>
        <field name="res_model">product.category.field</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>