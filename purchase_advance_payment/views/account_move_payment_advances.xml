<odoo>
    <record id="view_move_form_inherit_payment_advances" model="ir.ui.view">
        <field name="name">account.move.form.inherit.payment.advances</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Payment Advances" groups="account.group_account_invoice">
                    <field
                        name="advance_payment_ids"
                        nolabel="1"
                        context="{'form_view_ref': 'account.view_account_payment_form','tree_view_ref': 'account.view_account_payment_tree'}"
                    />
                </page>
            </xpath>
        </field>
    </record>
</odoo>