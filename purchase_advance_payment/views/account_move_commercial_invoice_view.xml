<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit vendor bill form view -->
    <record id="view_move_form_inherit_commercial_invoice" model="ir.ui.view">
        <field name="name">account.move.form.inherit.commercial.invoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Change default Confirm button label -->
            <!-- <xpath expr="//button[@name='action_post']" position="attributes">
                <attribute name="string">To Commercial Invoice</attribute>
                <attribute name="attrs">{'invisible': [('state', '!=', 'draft'), ('move_type', '!=', 'in_invoice')]}</attribute>
            </xpath> -->

            <!-- Add Validate button for commercial_invoice state -->
            <xpath expr="//header" position="inside">
                <button name="action_validate_commercial_invoice"
                        type="object"
                        string="Validate"
                        class="btn-primary"
                        attrs="{'invisible': [('state', '!=', 'commercial_invoice')]}"/>

                <button name="button_cancel_commercial_invoice"
                        type="object"
                        string="Cancel Commercial Invoice"
                        class="btn-danger"
                        attrs="{'invisible': [('state', '!=', 'commercial_invoice')]}"/>            
            </xpath>

            <xpath expr="//field[@name='ref']" position="after">
                <field name="container_number"/>
                <field name="receipt_date"/>
            </xpath>
        </field>
    </record>
</odoo>