<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_vendor_bill_advance_payment_wizard" model="ir.ui.view">
        <field name="name">Vendor Bill Advance Payment</field>
        <field name="model">account.voucher.wizard.invoice</field>
        <field name="arch" type="xml">
            <form string="Advance Payment">
                <group>
                    <field name="invoice_id" invisible="1"/>
                    <group colspan="4" col="4">
                        <field name="partner_id" readonly="1"/>
                        <field name="journal_id"/>
                        <field name="journal_currency_id" readonly="1"/>
                        <field name="payment_ref"/>
                        <field name="date"/>
                        <field name="amount_total" readonly="1"/>
                    </group>
                    <separator string="Advance Details" colspan="4"/>
                    <group colspan="4" col="4">
                        <field name="percentage_advance"/>
                        <field name="amount_advance"/>
                        <field name="currency_id" readonly="1"/>
                        <field name="currency_amount" readonly="1"/>
                    </group>
                </group>
                <footer>
                    <button name="make_advance_payment" type="object" string="Make Advance Payment" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_view_vendor_bill_advance_wizard" model="ir.actions.act_window">
        <field name="name">Vendor Bill Advance Payment</field>
        <field name="res_model">account.voucher.wizard.invoice</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

    <!-- Add Button to Vendor Bill Form -->
    <record id="view_move_form_inherit_advance" model="ir.ui.view">
        <field name="name">account.move.form.inherit.advance.payment</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_view_vendor_bill_advance_wizard)d"
                        string="Pay Advance"
                        type="action"
                        class="btn-primary"
                        attrs="{'invisible': [('move_type', '!=', 'in_invoice'), ('state', 'not in', ['draft', 'posted'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>